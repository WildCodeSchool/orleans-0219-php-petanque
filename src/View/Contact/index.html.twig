{% extends 'sublayout_visitor.html.twig' %}

{% block content %}

    <h1>Nous contacter</h1>


    <div class="container-fluid">
        <div class="row">
            <div class="col-5 offset-1">
                <h3>Contactez-nous</h3>
                <div class="heading-divider-extent"></div>
                <form method="post" novalidate>

                    <form>
                        <div class="firstname">
                            <label class="form-required" for="firstname"> Entrez votre prénom :</label>
                            <input type="text" class="form-control" placeholder="Prénom">
                            <div class="error-form">{{ errors.firstname }}</div>
                        </div>


                        <div class="lastname">
                            <label class="form-required" for="lastname">Entrez votre nom :</label>
                            <input type="text" class="form-control" placeholder="Nom">
                            <div class="error-form">{{ errors.lastname }}</div>
                        </div>


                        <div class="form-group">
                            <label class="form-required" for="emaillabel">Entrez votre adresse mail :</label>
                            <input type="email" class="form-control" id="emaillabel" name="email"
                                   aria-describedby="emailHelp" value="{{ contact.email }}"
                                   placeholder="Saisissez votre email" required>
                            <div class="error-form">{{ errors.email }}</div>
                        </div>

                        <div class="phone">
                            <label class="form-required" for="phone">Entrez votre numéro:</label><br>
                            <input type="tel" id="phone" name="phone"
                                   pattern="[0-9]{2}-[0-9]{2}-[0-9]{2}-[0-9]{2}-[0-9]{2}" placeholder=" 01-23-45-67-89">
                            <div class="error-form">{{ errors.phone }}</div>
                        </div>

                        <div class="form-group">
                            <label class="form-required" for="messagelabel">Votre message :</label>
                            <textarea class="form-control" id="messagelabel" value={{ contact.message }}rows="12"
                                      required></textarea>
                            <div class="error-form">{{ errors.message }}</div>
                        </div>
                        <div class="row my-3 mx-auto p-3 text-center justify-content-between">
                            <a class="btn btn_item w-100" name="submit" role="submit">Voir tous les évènements à
                                venir</a>
                        </div>

                    </form>
            </div>
            <div class="col-4 offset-1">
                <h3>Adresse</h3>
                <div class="heading-divider-extent"></div>
                <div class="mb-5">
                    <div>Boulodrome Couvert de la Plaine de Jeux du Belneuf</div>
                    <div>BP 3025</div>
                    <div>45030 ORLEANS CEDEX 1</div>
                </div>
                <h4>Coordonnées de contact</h4>
                <div class="heading-divider-extent"></div>
                Tel: 02 38 84 25 62 <br>
                Portable PRO : 07 86 38 52 25 <br>
                <br>
                Mail: petanque.argonnaise@orange.fr <br>
                Site : www.union-petanque-argonnaise.fr


            </div>
        </div>
    </div>

    <h2>NOUS SOMMES ICI</h2>
    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2673.977062459373!2d1.9420827515372299!3d47.91748127910442!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e4fb585999c3a5%3A0xc4dcba89b04a5029!2sUnion+P%C3%A9tanque+Argonnaise!5e0!3m2!1sfr!2sfr!4v1556012167047!5m2!1sfr!2sfr"
            width="100%" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>

{% endblock %}
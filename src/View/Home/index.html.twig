{% extends 'sublayout_visitor.html.twig' %}

{% block content %}

    <h1>Hello Wilder !</h1>

    <!-- ==================== Début Section "Vos envies" ==================== -->

    <section id="vos_envies">
        <h2 class="text-center">Vos envies...</h2>

        <div class="container">
            <div class="row">

                <div class="col-sm_12 col-lg-4 mx-auto card_margin">
                    <div class="card w-100 h-100">
                        <img class="card-img-top" src="assets/images/vosenvies_decouvrir.jpg"
                             alt="Photo découverte pétanque">
                        <div class="align-middle">
                            <p class="align-middle">&nbsp;</p>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title text-center">Découverte</h5>
                            <p class="card-text">Vous souhaitez découvrir l'univers de la pétanque ? Des terrains et des
                                ateliers sont à votre disposition.</p>
                        </div>
                        <div class="card-footer text-center">
                            <button type="button" class="btn" data-toggle="modal"
                                    data-target="#vos_envies">
                                Voir plus
                            </button>
                        </div>
                    </div>
                </div>

                <div class="col-sm_12 col-lg-4 mx-auto card_margin">
                    <div class="card w-100 h-100">
                        <img class="card-img-top" src="assets/images/vosenvies_entrainement.jpg"
                             alt="Photo entraînement pétanque">
                        <div class="align-middle">
                            <p class="align-middle">&nbsp;</p>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title text-center">Entraînement</h5>
                            <p class="card-text">Améliorez votre technique en participant à nos entraînements
                                semi-professionnels.</p>
                        </div>
                        <div class="card-footer text-center">
                            <button type="button" class="btn" data-toggle="modal"
                                    data-target="#vos_envies">
                                Voir plus
                            </button>
                        </div>
                    </div>
                </div>

                <div class="col-sm_12 col-lg-4 mx-auto card_margin">
                    <div class="card w-100 h-100">
                        <img class="card-img-top" src="assets/images/vosenvies_competition.jpg"
                             alt="Photo compétition pétanque">
                        <div class="align-middle">
                            <p class="align-middle">&nbsp;</p>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title text-center">Compétition</h5>
                            <p class="card-text">Allez plus loin et participez aux compétitions partout en France.</p>
                        </div>
                        <div class="card-footer text-center">
                            <button type="button" class="btn" data-toggle="modal"
                                    data-target="#vos_envies">
                                Voir plus
                            </button>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>

    <!-- ==================== Fin Section "Vos envies" ==================== -->

{% endblock %}


{% extends 'sublayout_visitor.html.twig' %}
{% block title %}UPA - Accueil{% endblock %}
{% block headercontent %}
    {%  set headerMainTitle = 'Union Pétanque Argonnaise'  %}
    {{ parent() }}
{% endblock %}
{% block content %}

    <!-- ==================== Début Section "Vos envies" ==================== -->

    <section id="vos_envies" class="container-fluid">

        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>Vos envies...</h2>
                <div class="h2_separator"></div>
            </div>
        </div>

        <div class="row mb-5 justify-content-center">
            <div class="col-sm_12 col-lg-3 card_margin card_margin_yourwishes">
                <div class="card card_yourwishes">
                    <img class="card-img-top card_img_yourwishes"
                         src="/assets/images/vosenvies_decouvrir.jpg"
                         alt="Photo découverte pétanque">
                    <div class="card-body card_body_yourwishes">
                        <h5 class="card-title text-center">Découverte</h5>
                        <p class="card-text">Vous souhaitez découvrir l'univers de la pétanque ? Des terrains et des
                            ateliers sont à votre disposition.</p>
                    </div>
                    <div class="card-footer card_title_footer text-center">
                        <button type="button" class="btn btn_item" data-toggle="modal"
                                data-target="#vos_envies">
                            Voir plus
                        </button>
                    </div>
                </div>
            </div>

            <div class="col-sm_12 col-lg-3 card_margin card_margin_yourwishes">
                <div class="card card_yourwishes">
                    <img class="card-img-top card_img_yourwishes"
                         src="/assets/images/vosenvies_entrainement.jpg"
                         alt="Photo entraînement pétanque">

                    <div class="card-body card_body_yourwishes">
                        <h5 class="card-title text-center">Entraînement</h5>
                        <p class="card-text">Améliorez votre technique en participant à nos entraînements
                            semi-professionnels.</p>
                    </div>
                    <div class="card-footer card_title_footer text-center">
                        <button type="button" class="btn btn_item" data-toggle="modal"
                                data-target="#vos_envies">
                            Voir plus
                        </button>
                    </div>
                </div>
            </div>

            <div class="col-sm_12 col-lg-3 card_margin card_margin_yourwishes">
                <div class="card card_yourwishes">
                    <img class="card-img-top card_img_yourwishes"
                         src="/assets/images/vosenvies_competition.jpg"
                         alt="Photo compétition pétanque">

                    <div class="card-body card_body_yourwishes">
                        <h5 class="card-title text-center">Compétition</h5>
                        <p class="card-text">Allez plus loin et participez aux compétitions partout en France et à
                            l'International</p>
                    </div>
                    <div class="card-footer card_title_footer text-center">
                        <button type="button" class="btn btn_item" data-toggle="modal"
                                data-target="#vos_envies">
                            Voir plus
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- ==================== Fin Section "Vos envies" ==================== -->



    <!-- ============== Début section Horaires ============= -->

    <section id="horaires" class="colored_background">

        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="h2_colored_section">Horaires</h2>
                    <div class="h2_separator_dark"></div>
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <div class="table-responsive-vertical mx-auto w-75">
                        <table class="table table-hover table_striped table-bordered">
                            <thead class="comp-thead-color">
                            <tr>
                                <th class="text-center" scope="col">Jour</th>
                                <th class="text-center" scope="col">Matin</th>
                                <th class="text-center" scope="col">Après-midi</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for schedule in schedules %}
                                <tr>
                                    <td class="text-center">{{ schedule.day }} :</td>
                                    <td class="text-center" data-title="Matin :">{{ schedule.morning }}</td>
                                    <td class="text-center" data-title="Après-midi :">{{ schedule.afternoon }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- ==================== Fin section Horaires ========================== -->


    <!-- ============== Début section Vie sportive ============= -->
    <section id="viesportive">
        <div class="container-fluid">
            <div class="col-lg-12 text-center">
                <h2>Vie sportive</h2>
                <div class="h2_separator"></div>
            </div>

            <div class="row justify-content-around mx-5">
                {% for event in events %}
                <div class="card rounded-0 px-5 col-lg-12 col-xl-4 mt-5 card-evt">
                    <div class="text-center m-2" >
                    <h5 class="card-title-evt text-center p-2 mt-3">{{ event.level | capitalize }}</h5>
                    </div>
                    <div class="card-body rounded-0 text-center mx-auto mx-3 p-0">
                        <div class="img_wrapper_viesportive">
                        <img class="card-img-top img-event-small p-2 textrounded-0 mb-5"
                                {% if event.gendermix|lower == 'homme' %}
                             src="/assets/images/compet/evt_homm2.jpg"
                             alt="compétition homme">
                        {% elseif event.gendermix|lower == 'femme' %}
                            src="/assets/images/compet/evt_femme.jpg" alt="compétition femme">
                        {% else %}
                            src="/assets/images/compet/evt_mixte.jpg" alt="compétition mixte">
                        {% endif %}
                        </div>
                    </div>
                    <div class="card-body card_body_evt pt-0">
                    <div class="heading-divider-extent"></div>
                        <ul class="list-group list-group-flush text-center">
                            <li class="list-group-item p-0 border-0">{{ event.dept_name }} ( {{ event.dept_num }})</li>
                        </ul>
                    <div class="heading-divider-extent"></div>
                        <ul class="list-group list-group-flush text-center">
                            <li class="list-group-item p-0 border-0">Catégorie : {{ event.category | capitalize }}</li>
                            <li class="list-group-item p-0 border-0">Type : {{ event.type | capitalize }}</li>
                            <li class="list-group-item p-0 border-0">Mixité : {{ event.gendermix | capitalize }}</li>
                        </ul>
                    <div class="heading-divider-extent"></div>
                        <li class="list-group-item p-0 border-0 text-center">
                            {% if event.date_begin < event.date_end %}
                                Du {{ event.date_begin }} au {{ event.date_end }}
                            {% else %}
                                Le {{ event.date_begin }}
                            {% endif %}
                        </li>
                    </div>
                    <div class="text-center">
                        <a class="btn btn_item mb-3" href="Event/show/{{ event.id }}" role="button">En savoir plus</a>
                    </div>
                </div>
                {% endfor %}
            </div>
            <div class="row my-3 mx-3 p-5 text-center justify-content-center">
                <a class="btn btn_item_invert mr-5" href="Event/index" role="button">Voir tous les évènements à venir</a>
                <a class="btn btn_item_invert ml-5" href="Event/indexresults" role="button">Voir tous les résultats</a>
            </div>
        </div>
    </section>

    <!-- ============== Fin section Vie sportive ============= -->

    <!-- ==================== Début section Qui Sommes Nous ========================== -->
    <section id="HquiSommesNous">
        <div class="mx-5">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="h2_colored_section">Membres du club</h2>
                    <div class="h2_separator_dark"></div>
                </div>
            </div>
            <div class="row text-center">
                {% for member in members %}
                    <div class="col-xl-4">
                        <div class="portrait_wrapper pt-3">
                            <div class="portrait float-left pr-4">
                                <img src={{ base_path~directory }}/{{ (member.picture is null) ? 'assets/images/members/placeholder.jpg' : member.picture}} class="rounded-circle home_members_picture" alt="Cinque Terre">
                            </div>
                            <div class="qui_title_wrap text-left">
                                <p>{{ member.lastname | capitalize}}  {{ member.firstname }}</p>
                            </div>
                            <div class="qui_role_wrap text-left">
                                <p>{{ member.role }}</p>
                            </div>
                            <div class="qui_desc_wrap text-left">
                                <p>{{ member.description }}</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

    <!-- ==================== Fin section Qui Sommes Nous ========================== -->


    <!-- ============== Debut section Partenaires ============= -->
    <section id="Hpartenaires">
        <div class="mx-5">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="h2_colored_section">Partenaires</h2>
                    <div class="h2_separator_dark">
                    </div>
                </div>
            </div>
            <div class="row text-center align-items-center row-no-padding">
                {% for partner in partners %}
                    <div class="col-xl-2 p-0">
                        <div class="sponsor_wrapper pt-3 pb-3">
                            <a href="{{ partner.url }}">
                                <img src="{{ base_path ~ directory }}/{{ partner.picture }}"
                                     class="rounded partner_img" alt="{{ partner.name }}">
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="w-100 text-center mt-4">
                <button class="btn comp-button-moreinfo mb-5">Ils nous font confiance</button>
            </div>
        </div>
    </section>
    <!-- ============== Fin section Partenaires ============= -->

{% endblock %}


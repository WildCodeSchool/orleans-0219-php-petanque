{% extends 'sublayout_visitor.html.twig' %}

{% block content %}

    <!-- ==================== Début Section "Vos envies" ==================== -->

    <section id="vos_envies" class="container">

        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>Vos envies...</h2>
                <div class="h2_separator"></div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm_12 col-lg-4 mx-auto card_margin card_margin_yourwishes">
                <div class="card card_yourwishes">
                    <img class="card-img-top card_img_yourwishes"
                         src="{{ base_path ~ directory }}/assets/images/vosenvies_decouvrir.jpg"
                         alt="Photo découverte pétanque">

                    <div class="card-body">
                        <h5 class="card-title text-center">Découverte</h5>
                        <p class="card-text">Vous souhaitez découvrir l'univers de la pétanque ? Des terrains et des
                            ateliers sont à votre disposition.</p>
                    </div>
                    <div class="card-footer card_title_footer text-center">
                        <button type="button" class="btn btn_item" data-toggle="modal"
                                data-target="#vos_envies">
                            Voir plus
                        </button>
                    </div>
                </div>
            </div>

            <div class="col-sm_12 col-lg-4 mx-auto card_margin card_margin_yourwishes">
                <div class="card card_yourwishes">
                    <img class="card-img-top card_img_yourwishes"
                         src="{{ base_path ~ directory }}/assets/images/vosenvies_entrainement.jpg"
                         alt="Photo entraînement pétanque">

                    <div class="card-body">
                        <h5 class="card-title text-center">Entraînement</h5>
                        <p class="card-text">Améliorez votre technique en participant à nos entraînements
                            semi-professionnels.</p>
                    </div>
                    <div class="card-footer card_title_footer text-center">
                        <button type="button" class="btn btn_item" data-toggle="modal"
                                data-target="#vos_envies">
                            Voir plus
                        </button>
                    </div>
                </div>
            </div>

            <div class="col-sm_12 col-lg-4 mx-auto card_margin card_margin_yourwishes">
                <div class="card card_yourwishes">
                    <img class="card-img-top card_img_yourwishes"
                         src="{{ base_path ~ directory }}/assets/images/vosenvies_competition.jpg"
                         alt="Photo compétition pétanque">

                    <div class="card-body">
                        <h5 class="card-title text-center">Compétition</h5>
                        <p class="card-text">Allez plus loin et participez aux compétitions partout en France et à
                            l'International</p>
                    </div>
                    <div class="card-footer card_title_footer text-center">
                        <button type="button" class="btn btn_item" data-toggle="modal"
                                data-target="#vos_envies">
                            Voir plus
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- ==================== Fin Section "Vos envies" ==================== -->



    <!-- ============== Début section Horaires ============= -->

    <section id="horaires" class="colored_background">

        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="h2_colored_section">Horaires</h2>
                    <div class="h2_separator_dark"></div>
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <div class="table-responsive-vertical mx-auto w-75">
                        <table class="table table-hover table_striped table-bordered">
                            <thead class="comp-thead-color">
                            <tr>
                                <th class="text-center" scope="col">Jour</th>
                                <th class="text-center" scope="col">Matin</th>
                                <th class="text-center" scope="col">Après-midi</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for schedule in schedules %}
                                <tr>
                                    <td class="text-center">{{ schedule.day }} :</td>
                                    <td class="text-center" data-title="Matin :">{{ schedule.morning }}</td>
                                    <td class="text-center" data-title="Après-midi :">{{ schedule.afternoon }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- ==================== Fin section Horaires ========================== -->

    <!-- ============== Début section Vie sportive ============= -->
    <section id="viesportive" class="colored_background">
        <div class="container-fluid">
            <div class="col-lg-12 text-center">
                <h2 class="h2_colored_section">Vie sportive</h2>
                <div class="h2_separator_dark"></div>
            </div>

            <div class="row justify-content-center">
                {% for event in events %}
                <div class="card rounded-0 col-sm-12 col-md-3 p-1 m-2">
                    <div class="text-center m-2" >
                    <h5 class="card-title-evt-date">
                        {% if event.date_begin > event.date_end %}
                            Du {{ event.date_begin }} au {{ event.date_end }}
                        {% else %}
                            {{ event.date_begin }}
                        {% endif %}
                    </h5>
                    <h4 class="card-title-evt ">{{ event.level | capitalize }}</h4>
                    </div>
                    <div class="card-body rounded-0 card-body-evt  text-center mx-auto p-0">
                        <img class="card-img-top img-event-small p-3 textrounded-0"
                                {% if event.gendermix|lower == 'homme' %}
                             src="{{ base_path ~ directory }}/assets/images/compet/evt_homm2.jpg"
                             alt="compétition homme">
                        {% elseif event.gendermix|lower == 'femme' %}
                            src="{{ base_path ~ directory }}/assets/images/compet/evt_femme.jpg" alt="compétition femme">
                        {% else %}
                            src="{{ base_path ~ directory }}/assets/images/compet/evt_mixte.jpg" alt="compétition mixte">
                        {% endif %}
                    </div>
                    <div class="card-body ">
                        <h3 class="card-title text-center ">{{ event.title }}</h3>
                        <p class="card-text text-justify">{{ event.descr }}</p>
                    <div class="heading-divider-extent"></div>
                        <ul class="list-group list-group-flush text-center">
                            <li class="list-group-item p-0">{{ event.dept_name }} ( {{ event.dept_num }})</li>
                        </ul>
                    <div class="heading-divider-extent"></div>
                        <ul class="list-group list-group-flush text-center">
                            <li class="list-group-item p-0">Catégorie : {{ event.category | capitalize }}</li>
                            <li class="list-group-item p-0">Type : {{ event.type | capitalize }}</li>
                            <li class="list-group-item p-0">Mixité : {{ event.gendermix | capitalize }}</li>
                        </ul>
                    <div class="heading-divider-extent"></div>
                        <ul class="list-group list-group-flush text-center">
                            <li class="list-group-item p-0">Date limite d'inscription : {{ event.date_register | capitalize }}</li>
                        </ul>
                    </div>
                    <div class="p-3 text-center">
                        <a class="btn comp-button-moreinfo w-50" href="Event/show/{{ event.id }}" role="button">En savoir plus</a>
                    </div>
                </div>
                {% endfor %}
            </div>
            <div class="my-1 p-1 text-center">
                <a class="btn comp-button-moreinfo w-50" href="Event/index" role="button">Voir tous les évènements à venir</a>
            </div>
            <div class="my-1 p-1 text-center">
                <a class="btn comp-button-moreinfo w-50" href="Event/indexresults" role="button">Voir tous les résultats</a>
            </div>
        </div>
    </section>



    <!-- ============== Fin section Vie sportive ============= -->

{% endblock %}


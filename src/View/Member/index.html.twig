{% extends 'sublayout_visitor.html.twig' %}
{% block title %}UPA - Accueil{% endblock %}
{% block headercontent %}
    {% set headerMainTitle = 'Union Pétanque Argonnaise' %}
    {% set headerSubTitle = 'Qui sommes nous ?' %}
    {% set smallHeader = true %}
    {{ parent() }}
{% endblock %}
{% block content %}
    <section id="member">
        <div class="container-fluid justify-content-center text-center p-4">
            <div class="btn-group mt-5 mb-5" role="group" aria-label="Basic example">
                <button type="button" class="mx-4 btn btn_item_members btn_toggle_member" id="commButton">Commission</button>
                <button type="button" class="mx-4 btn btn_item_members btn_toggle_member" id="salaButton">Salarié</button>
                <button type="button" class="mx-4 btn btn_item_members btn_toggle_member" id="comiteButton">Comité Directeur</button>
            </div>
            <div class="row justify-content-center mt-3">

                {% for key, member in members %}

                    <div class="card col-lg-6 col-xl-3 p-0 m-3 min_width_card_members rounded-0"
                         data-commission="{{ member.isCommission }}"
                         data-salaried="{{ member.isSalaried }}" data-committee="{{ member.isComiteDirecteur }}">
                        <div class="card-header m-0 p-0 border-0">
                            <img class="card_member_image rounded-0 sepia_img_cover" src="/{{ member.picture }}"
                                 alt="{{ member.firstname }} {{ member.lastname }}">
                        </div>
                        <div class="card-body pt-0 pl-3 text-left card_body_member_bg">
                            <div class="name_role_member_card">
                                <p class="text-left mt-3 card_member_text">{{ member.firstname }} {{ member.lastname }}</p>
                                <div class="heading-divider-extent"></div>
                                <p class="text-left font-italic">{{ member.role }}</p>
                                <p class="text-left font-italic">{{ member.commissions }}</p>
                            </div>
                            <div class="heading-divider-extent"></div>
                            <div class="desc_member_card">
                                <p class="text-left">
                                    {{ randomDescription[key] }}
                                </p>
                            </div>
                        </div>
                    </div>

                {% endfor %}

            </div>
        </div>
    </section>

    <section id="sponsors" class="colored_background">
        <div class="container-fluid justify-content-center text-center">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="h2_colored_section">Nos Partenaires</h2>
                    <div class="h2_separator_dark">
                    </div>
                </div>
            </div>

            <div class="row justify-content-center">

                {% for partner in partners %}

                    <div class="col-md-6 col-lg-2 p-0  my-auto py-3">
                        <div class="sponsors_wrapper mx-auto">
                            <a href="{{ partner.url }}">
                            <img class="partner_img" src="/{{ partner.picture }}"
                                 alt="{{ partner.lastname }} {{ partner.firstname }}">
                            </a>
                        </div>
                    </div>

                {% endfor %}

            </div>
        </div>
    </section>



{% endblock %}
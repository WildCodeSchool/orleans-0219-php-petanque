{% extends 'sublayout_visitor.html.twig' %}

{% block content %}
    <div class="container justify-content-center text-center p-0">
        <div class="btn-group mt-5 mb-3" role="group" aria-label="Basic example">
            <button type="button" class="btn btn-secondary btn_toggle_member" id="commButton">Commission</button>
            <button type="button" class="btn btn-secondary btn_toggle_member" id="salaButton">Salarié</button>
            <button type="button" class="btn btn-secondary btn_toggle_member" id="comiteButton">Comité Directeur</button>
        </div>
        <div class="row justify-content-center">

            {% for member in members %}

                <div class="card col-md-6 col-lg-3 p-0 m-3 min_width_card_members" data-commission="{{ member.isCommission }}"
                    data-salaried="{{ member.isSalaried }}" data-committee="{{ member.isComiteDirecteur }}">
                    <div class="card-header img_cover_member card_header_member_bg">
                        <img class="card_img_member rounded-0" src="{{ base_path ~ directory }}/{{ member.picture }}"
                             alt="{{ member.lastname }} {{ member.firstname }}">
                    </div>
                    <div class="card-body p-3 text-left card_body_member_bg">
                        <p class="card_member_name">{{ member.lastname }} {{ member.firstname }}</p>
                        <p class="card_member_role">{{ member.role }}</p>
                        <p class="card-text">{{ member.desc }}</p>
                    </div>
                </div>

            {% endfor %}
        </div>
    </div>
    <h2 class="mb-3 text-center">Nos partenaires</h2>
    <div class="container-fluid justify-content-center text-center p-5 sponsor_background">

        <div class="row justify-content-center">

            {% for sponsor in sponsors %}

                <div class="col-md-6 col-lg-3 p-0 m-3 my-auto py-3">
                    <div class="sponsor_wrapper mx-auto">
                        <img class="img_sponsor" src="{{ base_path ~ directory }}/{{ sponsor.picture }}"
                             alt="{{ sponsor.lastname }} {{ sponsor.firstname }}">
                    </div>
                </div>

            {% endfor %}

        </div>
    </div>




{% endblock %}
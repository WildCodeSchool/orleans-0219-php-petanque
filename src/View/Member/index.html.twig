{% extends 'sublayout_visitor.html.twig' %}

{% block content %}
    <div class="container justify-content-center text-center p-0">
    <div class="row justify-content-center">

    {% for member in members %}

        <div class="card col-sm-6 col-md-3 p-0 m-5">
            <div class="card-header">
                <img class="card_img_member rounded-0" src="{{ base_path ~ directory }}/{{ member.picture }}" alt="">
            </div>
            <div class="card-body p-3">
                <p class="card_member_name"></p>
                <p class="card_member_role"></p>
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
            </div>
        </div>

    {% endfor %}

    </div>
    </div>
{% endblock %}
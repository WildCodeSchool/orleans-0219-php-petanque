{% extends 'sublayout_visitor.html.twig' %}

{% block content %}

    <div class="container">

        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>Vos envies...</h2>
                <div class="h2_separator"></div>
            </div>
        </div>

        <form method="post">
            <div class="table-responsive-vertical mx-5">
                <!-- Table starts here -->
                <table class="table table-hover table-striped table-bordered">
                    <thead class="comp-thead-color">
                    <tr>
                        <th class="text-center" scope="col">Jour</th>
                        <th class="text-center" scope="col">Matin</th>
                        <th class="text-center" scope="col">Après-midi</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for schedule in schedules %}
                        <tr>
                            <td class="text-center">{{ schedule.day }} :</td>
                            <td class="text-center" data-title="Matin :">
                                <input id="morning{{ schedule.id }}" name="morning{{ schedule.id }}" type="text"
                                       class="input_schedule" value="{{ schedule.morning }}" required>
                            </td>
                            <td class="text-center" data-title="Après-midi :">
                                <input id="afternoon{{ schedule.id }}" name="afternoon{{ schedule.id }}" type="text"
                                       class="input_schedule" value="{{ schedule.afternoon }}" required>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <div class="text-right btn_schedule">
                    <button class="btn btn_item" type="submit">modifier</button>
                </div>
            </div>
        </form>
    </div>

{% endblock %}
